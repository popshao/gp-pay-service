    <!-- 脚本 -->

    <script type="text/javascript">
        /*设置框架返回按钮*/
        top.utils.frameBack({
            handler:function (btn) {
                location.href = document.referrer;
            }
        })
		$(function(){
			$("#addForm").validate({
                submitHandler: add, //如果验证通过的回调函数
                rules: {
                 	username: {
                        required: true,
						maxlength: 20,
                   		minlength: 4,
                   		remote: {
                            type: "post",
                            url: "/purchase/member/supplierMember_validateUsername.html",
                            data: {
                            	mName: function() {
                                    return $("#username").val();
                                }
                            },
                            dataType: "json",
                            dataFilter: function(dataXML) {
                            	var result = dataXML;
                                if (result=="true")
                                    return false;
                                else
                                    return true;
                            }
                        }
                    },
					mobile : {
						required : true,
						isMobile: true,
						remote : {
							type : "post",
							url : "/purchase/member/supplierMember_validateMobile.html",
							data : {
								mTel : function() {
									return $("#mobile").val();
								}
							},
							dataType : "json",
							dataFilter : function(dataXML) {
								var result = dataXML;
								if (result == "true")
									return false;
								else
									return true;
							}
						}
					},
					email : {
						required : true,
						isEmail: true,
						remote : {
							type : "post",
							url : "/purchase/member/supplierMember_validateEmail.html",
							data : {
								mEmail : function() {
									return $("#email").val();
								}
							},
							dataType : "json",
							dataFilter : function(dataXML) {
								var result = dataXML;
								if (result == "true")
									return false;
								else
									return true;
							}
						}
					},
                    nickname:{
                    	required: true,
						maxlength: 100
                    },
                    password:{
                    	required: true,
						maxlength: 20,
                   		minlength: 6
                    },
                    siteId:{
                    	required: true
                    }
                    
                },
                messages: {
                	username:{
                		remote: "该用户名已被占用"
                	},
                	mobile:{
                		remote: "手机号码已被占用"
                	},
                	email:{
                		remote: "email已被注册"
                	},
                	siteId:{
                		required:"必须勾选"
                	}
                },
	               errorPlacement: function(error, element) {
	                   error.appendTo(element.parent());
	               }
            });
		});
    function back(){
    	location="/purchase/account/user_infos_main.html";
    }
    function add(){
    	//验证角色必填
    	var roleId=$("#roleId").val();
		   if(roleId==""){
			   top.ue.msg("请选择角色");
				return;
		   }
		   
    	var userInfoObj={};
    	userInfoObj.username = $("#username").val();
    	userInfoObj.nickname = $("#nickname").val();
    	userInfoObj.password = $("#password").val();
    	userInfoObj.mobile = $("#mobile").val();
    	userInfoObj.email=$("#email").val();
    	userInfoObj.uiStatus = $("input[name='uiStatus']:checked").val();
    	var eType = "$!eType";
    	if(eType == 2){
    		userInfoObj.eId = $("#eId").val();
    	}
    	userInfoObj.roleId = $("#roleId").val();
    	var mRemark=$("#mRemark").val();
    	//获取复选框的值
    	var str=$("input[name='siteId']:checked");
    	var objarray=str.length;
    	var siteIds="";
    	for (i=0;i<objarray;i++){
    		siteIds+=","+str[i].value;
    	}
	    var jsonParam = $.toJSON(userInfoObj);
	    $.showLoad();
	    $.ajax({
	           url: '/purchase/account/user_infos_add.html',
	           data: {"jsonParam":jsonParam,"mRemark":mRemark,"siteIds":siteIds,"eType":eType},
	           type: 'POST',
	           dataType: 'json',
            complete:function () {
                $.hideLoad();
            },
	           success: function(result) {
	               if (result) {
	                  top.ue.alert({
		                title: '提示信息',
		                content: "添加子账号成功",
		                end: function() {
                            top.utils.frameBackDel();
		                    location = "/purchase/account/user_infos_main.html";
		                }
		            })
	               } else {
	                   dialog({
	                       title: "添加子账号",
	                       content: "添加子账号失败",
	                       width: 300
	                   });
	             }
	           }
	        });
    }
    </script>
