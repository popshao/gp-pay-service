    #parse("/common/footer.vm")
    
	<script type="text/javascript" src="/js/login.js?v=$!{jscss_version}"></script>
    <script>
        /*设置框架返回按钮*/
        top.utils.frameBack({
            render:true,
            handler:function (btn) {
                location.href = "/purchase/edit_email.html";
            }
        })
    $(function(){
	    $("input[name=password]").focus(function() {
	    	hide_error(".fn_password");
	    	hide_error(".fn_verCode");
    	})
    	
	    $("input[name=verCode]").focus(function() {
	    	hide_error(".fn_verCode");
    	})
    })
    $(".btn").click(function() {
	var password   = $("#password").val();
	var verCode = $("#verCode").val();

	if(password == ""){
		show_error(".fn_password","请输入登录密码。");
		return false;
	}
	if(verCode == ""){
		show_error(".fn_verCode","请输入验证码。");
		return false;
	}
	var params = {
			password		: password, 
			verCode		: verCode
		};	
		$.ajax({
			url: "/purchase/check_password_editemail.html",
			type: "post",
			dataType: "json",
			data: params,
			success: function(data) {
				if(data.success){
					if(data.data==null){
						window.location.href = "/purchase/edit_email_update.html";
					}
					if (data.data.status == "1") {
						show_error(".fn_verCode","验证码不正确。");
						change_captcha('#code_img');
						hide_error(".fn_password");
						$("#verCode").val("");
					}else if(data.data.status == "101"){
						show_error(".fn_password","密码不正确。");
						change_captcha('#code_img');
						$("#password").val("");
						$("#verCode").val("");
					}	
				}
			}
		});
		return false;
	})
	function show_error(fun,mes){
		$(fun).html(mes).show();
	}
	function hide_error(fun,mes){
		$(fun).html(mes).hide();
	}
	
	$("input[name=verCode]").keyup(function() {
    	var verCode = $("#verCode").val();
    	if(verCode.length!=4){
    		return false;
    	}
    	if(verCode == ""){
    		show_error(".fn_verCode","请输入验证码");
    		return false;
    	}
    	var params = {
    			verCode		: verCode
   		};	
   		$.ajax({
   			url: "/sales/check_email.html",
   			type: "post",
   			dataType: "json",
   			data: params,
   			success: function(data) {
   				if(data.success){
   					if(data.data==null){
   	   						hide_error(".fn_verCode");
   					}else{
   						 if(data.data.status == "1"){
   							show_error(".fn_verCode","验证码错误");
   						}else{
   							show_error(".fn_verCode","系统错误，请重试");
   						}
   					}
   				}
   			}
   		});
   		return false;
	})
    </script>
    
  </body>
