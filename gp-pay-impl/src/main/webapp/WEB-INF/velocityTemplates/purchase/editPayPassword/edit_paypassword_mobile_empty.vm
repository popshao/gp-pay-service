<body>
	<div class="container">
		#parse("common/header_top.vm")
		#parse("common/header.vm")
		<div class="content">
			<div class="wrap cc">
				
				#parse("common/left_menu_purchase.vm")
				
				<div class="user_right fl">
		            <!-- 用户中心_主体内容_S -->
		            <div class="indmain">
		            	
		            	<div class="path">
		                    <p><a href="/purchase/index.html" class="color">采购中心</a>&gt; 账户中心 &gt;<a href="/purchase/account/account_toEdit.html" class="color">账号信息管理</a>&gt; #if($!{userInfos.payPassword}=="")
