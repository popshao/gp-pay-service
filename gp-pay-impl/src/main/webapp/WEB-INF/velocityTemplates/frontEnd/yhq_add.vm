<script>

    $(function(){

        <!-- uf-table表格最后一行无下边框 -->
        $(".uf-table").find("tr:last td").css("border-bottom","none");

        <!-- 自定义radio&checkbox -->
        function setupLabel(){
            if($('.label_check input').length) {
                $('.label_check').each(function(){
                    $(this).removeClass('c_on');
                });
                $('.label_check input:checked').each(function(){
                    $(this).parent('label').addClass('c_on');
                });
            }
            if($('.label_radio input').length) {
                $('.label_radio').each(function(){
                    $(this).removeClass('r_on');
                });
                $('.label_radio input:checked').each(function(){
                    $(this).parent('label').addClass('r_on');
                });
            }
        }

        $(function(){
            $('body').addClass('user-has-js');
            $('.label_check,.label_radio').click(function(){
                setupLabel();
            });
            setupLabel();
        });

        //打折券-radio选中显示
        $("#radios-dz-box input:radio").click(function(){
            var UTime = $('input:radio[id="radio-02"]:checked').val();
            if (UTime){
                $("#radio-dz-t-form").show();
                $("#radio-mj-t-form").hide();
            }
            if (UTime==null){
                $("#radio-dz-t-form").hide();
                $("#radio-mj-t-form").show();
            }
        });

        //指定部分商品-radio选中显示
        $("#radios-sp-box input:radio").click(function(){
            var UTime = $('input:radio[id="radio-04"]:checked').val();
            if (UTime){
                $("#radio-t-tips").show();
                $("#radio-user-form").show();
                $("#radio-t-btn").show();
            }
            if (UTime==null){
                $("#radio-t-tips").hide();
                $("#radio-user-form").hide();
                $("#radio-t-btn").hide();
            }
        });

        //指定部分支付方式-radio选中显示
        $("#radios-zf-box input:radio").click(function(){
            var UTime = $('input:radio[id="radio-08"]:checked').val();
            if (UTime){
                $("#radio-zf-div").show();
            }
            if (UTime==null){
                $("#radio-zf-div").hide();
            }
        });

    })

</script>
