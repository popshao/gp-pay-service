				            	    return true;
				            	}
				            	top.ue.load();
				    			$.ajaxPost(
				    					"/sales/member/sendSMS.html", {
				    						"eId": _eId,
				    						"eName":_eName,
				    						"mId": _mId,
				    						"mobile": values.invPhone,
				    						"smId":_smId
				    					},function(result) {
				    					    top.ue.closeLoad();
				    						var obj = eval("(" + result + ")");
				    			        	if(obj.data==1){
                                                top.ue.msg("发送成功");
				    			        		window.location.href = "/sales/member/member_info.html?$!{returnPageParam}";
				    			        		return false;
				    			        	}else if((obj.data==0)){
				    				        	layAlert({
				    					            tpl:"#hasSendU",
				    					            data:{
				    					            	"eName":obj.message,
				    					            	"eMobile":values.invPhone,
				    					            	"eId":_eId,
				    					            	"sendNum4eid":sendNum4eid,
				    					            	"lastSendMobile":values.invPhone
				    					            },ok:function(values,idx,layer){
				    			        				return false;
				    					            }
				    				        	});
				    			        	}else{
                                                top.ue.msg("没有激活码");
				    			        		return true;
				    			        	}
				    			});
				            }
				            }
				        });
			});
        })

    })

		$(function() {

			if ((navigator.userAgent.indexOf('MSIE') >= 0)
				    && (navigator.userAgent.indexOf('Opera') < 0)){
			jQuery('[placeholder]').focus(function() {
				  var input = jQuery(this);
				  if (input.val() == input.attr('placeholder')) {
				    input.val('');
				    input.removeClass('placeholder');
				  }
				}).blur(function() {
				  var input = jQuery(this);
				  if (input.val() == '' || input.val() == input.attr('placeholder')) {
				    input.addClass('placeholder');
				    input.val(input.attr('placeholder'));
				  }
				}).blur().parents('form').submit(function() {
				  jQuery(this).find('[placeholder]').each(function() {
				    var input = jQuery(this);
				    if (input.val() == input.attr('placeholder')) {
				      input.val('');
				    }
				  })
				});
			}
