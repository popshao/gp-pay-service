			$.sltitem.select("depId","$!{depId}");
			$.sltitem.select("regionId","$!{regionId}");
			$.sltitem.select("sgId","$!{sgId}");
			
			//是否为账期客户
			var smAccountPeriod = "$!{smAccountPeriod}";
			if(smAccountPeriod == "1"){
				$("#sapCheck")[0].checked = true;
			}
			
			renderUploader();
		})
		
