                        type: 'get',
                        success: function (res) {
                            if (res.code != 0) {
                                top.layer.msg(res.message);
                            }
                            else {
                                $("#basePrice-"+gid).html("&yen;"+basePrice);
                                updateBaseIns(basePrice)
                                top.ue.close(idx);
                                top.ue.msg("修改基价成功");
                                getGood();
                                return;
                            }
                        }
                    })
                }
            })
