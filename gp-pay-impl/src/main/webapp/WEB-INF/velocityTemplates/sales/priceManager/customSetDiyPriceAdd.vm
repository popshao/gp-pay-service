        function batchAddPrice(isSpc) {
            if(!GoodLists.length) {
                layer.msg("请先选择商品！");
                return;
            }
            if($("#batchCtsBtn").hasClass("b-disabled")){
                return false;
            }
            if(!CtsLists.length){
                top.ue.msg("请先添加客户");
                return false;
            }
            var _sels = getSelIds("#customerList","eid");
            _d = {
                gCount: GoodLists.length,
